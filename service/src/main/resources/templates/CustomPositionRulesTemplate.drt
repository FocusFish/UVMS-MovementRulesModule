template header
rulename
expression
action

import eu.europa.ec.fisheries.uvms.rules.service.business.PositionFact;
import eu.europa.ec.fisheries.uvms.rules.service.business.CustomEvent;

template "NewCustomPositionRulesTemplate"

rule "@{rulename}"
when
   $p : PositionFact(@{expression})
then
   System.out.println("DEBUG - Rule triggered. Action:'@{action}', guid:" + $p.getGuid());
   insert(new CustomEvent($p, "@{action}"));
end

end template
